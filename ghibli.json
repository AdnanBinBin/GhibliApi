{
    "swagger": "2.0",
    "info": {
        "title": "Studio Ghibli API",
        "description": "Studio Ghibli Information",
        "version": "1.0.0"
    },
    "host": "jamesanaipakos.com",
    "schemes": [
        "https"
    ],
    "basePath": "/ghibli-api",
    "produces": [
        "application/json"
    ],
    "paths": {
        "/people": {
            "get": {
                "summary": "Product Types",
                "description": "The people of Ghibli.\n",
                "parameters": [
                    {
                        "name": "name",
                        "in": "query",
                        "description": "Person's name",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "gender",
                        "in": "query",
                        "description": "Person's gender.",
                        "required": true,
                        "type": "string"
                    }
                ],
                "tags": [
                    "People"
                ],
                "responses": {
                    "200": {
                        "description": "An array of products",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Person"
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/film": {
            "get": {
                "summary": "Film",
                "description": "Ghibli film",
                "parameters": [
                    {
                        "name": "name",
                        "in": "query",
                        "type": "string",
                        "description": "Name of film"
                    },
                    {
                        "name": "director",
                        "in": "query",
                        "type": "string",
                        "description": "Film director"
                    },
                    {
                        "name": "release_year",
                        "in": "query",
                        "type": "string",
                        "description": "Year released"
                    }
                ],
                "tags": [
                    "Film"
                ],
                "responses": {
                    "200": {
                        "description": "History information for the given user",
                        "schema": {
                            "$ref": "#/definitions/Film"
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "Person": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "Person's name"
                },
                "gender": {
                    "type": "string",
                    "description": "Person's gender"
                }
            }
        },
        "Film": {
            "type": "object",
            "properties": {
                "title": {
                    "type": "string",
                    "description": "Film title"
                },
                "director": {
                    "type": "string",
                    "description": "Film director"
                },
                "release_date": {
                    "type": "string",
                    "description": "Film release date"
                }
            }
        },
        "Error": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "integer",
                    "format": "int32"
                },
                "message": {
                    "type": "string"
                },
                "fields": {
                    "type": "string"
                }
            }
        }
    }
}